<h1>CHAT APPLICATION</h1>
<div class="container">
  <div class="header">
    <h2>Messages</h2>
    <!-- <a href="#" title="Add Friend to this chat">+</a> -->
  </div>
  <ul id="chat">
    <%= render @messages %>
  </ul>

  <%= form_for Message.new, remote: true do |f| %>
      <%= f.text_field :content %>
      <%= f.submit "Send" %>
  <% end %>
  <%= subscribe_to "/messages/new" %>
    </div>
  </div>
</div>